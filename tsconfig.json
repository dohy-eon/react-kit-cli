{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react-jsx"
  },
  "include": ["bin/**/*", "src/**/*"],
  "exclude": ["node_modules", "dist", "templates", "**/*.test.ts", "**/*.spec.ts"]
}
